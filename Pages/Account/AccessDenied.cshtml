@page
@model Barangay.Pages.Account.AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-exclamation-circle text-danger fa-4x mb-3"></i>
                    <h2 class="card-title mb-3">Access Denied</h2>
                    <p class="card-text mb-4">
                        You do not have permission to access this resource. Please contact your administrator if you believe this is an error.
                    </p>
                    <div class="d-grid gap-2">
                        <a href="javascript:history.back()" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Go Back
                        </a>
                        <a href="/" class="btn btn-primary">
                            <i class="fas fa-home me-2"></i>Return to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div> 
</div>
<script>
    (function () {
        try {
            var msg = 'Access denied. You do not have permission to perform this action.';
            if (typeof window.showToast === 'function') {
                window.showToast('error', msg);
            } else if (typeof window.toastr !== 'undefined') {
                toastr.error(msg);
            } else if (window.bootstrap) {
                // lightweight bootstrap toast fallback via global handler if present
                console && console.warn && console.warn('Access denied');
            } else {
                alert(msg);
            }
            // Prefer going back to previous page; if no history, go home
            setTimeout(function(){
                if (window.history.length > 1) {
                    window.history.back();
                } else {
                    window.location.href = '/';
                }
            }, 1200);
        } catch (_) { /* ignore */ }
    })();
</script>