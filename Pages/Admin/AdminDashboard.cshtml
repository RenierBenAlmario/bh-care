@page
@model Barangay.Pages.Admin.AdminDashboardModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}

<link rel="stylesheet" href="~/css/admin-dashboard-bhcare-new.css" />



<div class="admin-layout">
    <aside class="sidebar">
        <div class="sidebar-header">
            <div class="logo">
                <i class="fa-solid fa-clinic-medical"></i>
                <span class="sidebar-text">Barangay Health</span>
            </div>
            <button id="collapse-sidebar" class="collapse-btn" aria-label="Collapse sidebar">
                <i class="fa-solid fa-chevron-left"></i>
            </button>
        </div>
        
        <div class="sidebar-user-info">
            <div class="user-avatar">
                <span>@(User.Identity?.Name != null ? User.Identity.Name.Substring(0, 1).ToUpper() : "A")</span>
            </div>
            <div class="user-details">
                <span class="user-welcome">Hello,</span>
                <span class="user-name">@(User.Identity?.Name ?? "Admin")</span>
                <span class="user-role">System Administrator</span>
            </div>
        </div>
        
        
        
        <div class="sidebar-menu">
            <!-- Main Group -->
            <div class="nav-group">
                <div class="nav-group-label">Main</div>
                <ul class="nav-list">
                    <li class="nav-item">
                        <a href="/Admin/AdminDashboard" class="nav-link active" data-tooltip="Dashboard">
                            <i class="fa-solid fa-table-cells-large"></i>
                            <span class="sidebar-text">Dashboard</span>
                        </a>
                    </li>
                </ul>
            </div>
            
            <!-- Administration Group -->
            <div class="nav-group">
                <div class="nav-group-label">Administration</div>
                <ul class="nav-list">
                    <li class="nav-item">
                        <a href="/Admin/UserManagement" class="nav-link" data-tooltip="User Management">
                            <i class="fa-solid fa-users"></i>
                            <span class="sidebar-text">User Management</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Admin/ImmunizationArchive" class="nav-link" data-tooltip="Archive">
                            <i class="fa-solid fa-archive"></i>
                            <span class="sidebar-text">Archive</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Admin/AddStaff" class="nav-link" data-tooltip="Add Staff">
                            <i class="fa-solid fa-user-plus"></i>
                            <span class="sidebar-text">Add Staff Member</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Admin/StaffPermissions" class="nav-link" data-tooltip="Staff Permissions">
                            <i class="fa-solid fa-shield-halved"></i>
                            <span class="sidebar-text">Staff Permissions</span>
                        </a>
                    </li>
                </ul>
            </div>
            
            <!-- Tools Group -->
            <div class="nav-group">
                <div class="nav-group-label">System Tools</div>
                <ul class="nav-list">
                    <li class="nav-item">
                        <a href="/Admin/NCDFormManagement" class="nav-link" data-tooltip="NCD Form Management">
                            <i class="fa-solid fa-file-medical-alt"></i>
                            <span class="sidebar-text">NCD Form Management</span>
                            <span class="new-feature">Enhanced</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Admin/HEEADSSSFormManagement" class="nav-link" data-tooltip="HEEADSSS Form Management">
                            <i class="fa-solid fa-clipboard-list"></i>
                            <span class="sidebar-text">HEEADSSS Form Management</span>
                            <span class="new-feature">New</span>
                        </a>
                    </li>
                </ul>
            </div>
            
            
        </div>
        
        <div class="sidebar-footer">
            <form method="post" asp-page="/Account/Logout">
                <button type="submit" class="logout-btn" data-tooltip="Logout">
                    <i class="fa-solid fa-right-from-bracket"></i>
                    <span class="sidebar-text">Logout</span>
                </button>
            </form>
        </div>
    </aside>

    <main class="main-content">
        <!-- Skip to content link for accessibility -->
        <a href="#main-content" class="skip-link">Skip to content</a>
        
        <div id="main-content">
            <div class="content-top" style="margin-bottom: 1rem;">
                <div class="content-header">
                    <h1 class="content-title" style="font-weight:700; color:#202938;">Dashboard</h1>
                    <div class="breadcrumbs">
                        <a href="/Admin/AdminDashboard" class="breadcrumb-item">Dashboard</a>
                        <span class="breadcrumb-item active">Overview as of @Model.CurrentPhilippineTime.ToString("dddd, MMMM d, yyyy 'at' h:mm tt")</span>
                    </div>
                </div>
                <div class="content-actions">
                    <a href="/Admin/AddStaff" class="primary-action">
                        <i class="fa-solid fa-user-plus"></i>
                        <span>Add Staff Member</span>
                    </a>
                    <div class="secondary-actions">
                        <button class="action-btn refresh-btn" id="refreshDashboard" data-tooltip="Refresh Dashboard">
                            <i class="fa-solid fa-rotate-right"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Stats Overview -->
            <div class="stats-overview section-spacing">
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="stat-card dashboard-card" style="border:1px solid #eef0f3;">
                            <div class="stat-card-body standard-padding">
                                <div class="stat-card-icon" style="background:#fff0e6;color:#e86a17;">
                                    <i class="fa-solid fa-user-doctor"></i>
                                </div>
                                <div class="stat-card-info">
                                    <div class="stat-card-title" style="color:#334155;font-weight:600;">Total Staff</div>
                                    <div class="stat-card-value" style="color:#111827;font-weight:700;">@(Model.TotalDoctors + Model.TotalNurses)</div>
                                    <div class="stat-card-detail" style="color:#6b7280;">
                                        @Model.TotalDoctors Doctors, @Model.TotalNurses Nurses
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-card dashboard-card" style="border:1px solid #eef0f3;">
                            <div class="stat-card-body standard-padding">
                                <div class="stat-card-icon" style="background:#fff0e6;color:#e86a17;">
                                    <i class="fa-solid fa-clock"></i>
                                </div>
                                <div class="stat-card-info">
                                    <div class="stat-card-title" style="color:#334155;font-weight:600;">Pending Requests</div>
                                    <div class="stat-card-value" style="color:#111827;font-weight:700;">@Model.TotalAppointments</div>
                                    <div class="stat-card-detail" style="color:#6b7280;">
                                        Appointments to review
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-card dashboard-card" style="border:1px solid #eef0f3;">
                            <div class="stat-card-body standard-padding">
                                <div class="stat-card-icon" style="background:#fff0e6;color:#e86a17;">
                                    <i class="fa-solid fa-user-check"></i>
                                </div>
                                <div class="stat-card-info">
                                    <div class="stat-card-title" style="color:#334155;font-weight:600;">Active Staff</div>
                                    <div class="stat-card-value" style="color:#111827;font-weight:700;">@Model.ActiveStaffCount</div>
                                    <div class="stat-card-detail" style="color:#6b7280;">
                                        Currently active members
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Staff Overview -->
            <div class="row mt-4 section-spacing">
                <div class="col-12">
                    <div class="card dashboard-card" style="border:1px solid #eef0f3;">
                        <div class="card-header" style="background:#fff;border-bottom:1px solid #eef0f3;display:flex;align-items:center;justify-content:space-between;">
                            <h5 class="card-title mb-0" style="font-weight:700;color:#202938;">Staff Overview</h5>
                            <div class="staff-filters">
                                <input type="text" id="staffSearch" class="form-control" placeholder="Search name or email" />
                                <select id="roleFilter" class="form-select">
                                    <option value="all">All Roles</option>
                                    <option>Doctor</option>
                                    <option>Nurse</option>
                                    <option>Admin</option>
                                </select>
                            </div>
                        </div>
                        <div class="card-body p-0 standard-padding">
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0 enhanced">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Role</th>
                                            <th>Status</th>
                                            <th>Last Active</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var staff in Model.RecentStaff)
                                        {
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <div class="avatar me-2">@(string.IsNullOrEmpty(staff.Name) ? "?" : staff.Name.Substring(0, 1))</div>
                                                        <div>
                                                            <div style="font-weight:600;color:#111827;">@staff.Name</div>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>@staff.Role</td>
                                                <td>
                                                    <span class="badge pill @(staff.IsActive ? "status-verified" : "status-warning")">
                                                        @(staff.IsActive ? "Active" : "Inactive")
                                                    </span>
                                                </td>
                                                <td>
                                                    <span data-ts="@staff.LastActive.ToString("o")" class="last-active">@(staff.LastActive != default(DateTime) ? staff.LastActive.ToString("MMM dd, yyyy HH:mm") : "Never")</span>
                                                </td>
                                                <td>
                                                    <div class="btn-group action-buttons">
                                                        <button class="btn action action-secondary btn-sm view-staff-btn" data-id="@staff.Id" title="View Details">
                                                            <i class="fa-solid fa-eye"></i>
                                                        </button>
                                                        <a asp-page="./EditStaffMember" asp-route-id="@staff.Id" class="btn action action-primary btn-sm" title="Edit">
                                                            <i class="fa-solid fa-pen-to-square"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Refresh dashboard data
            document.getElementById('refreshDashboard')?.addEventListener('click', function() {
                location.reload();
            });

            // Staff detail view buttons
            document.querySelectorAll('.view-staff-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const staffId = this.getAttribute('data-id');
                    // Create modal for staff details
                    showStaffDetailsModal(staffId);
                });
            });
            
            // Update the timestamp every minute
            function updateTimestamp() {
                const now = new Date();
                const options = {
                    weekday: 'long',
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                    hour: 'numeric',
                    minute: '2-digit',
                    hour12: true
                };
                const timeString = now.toLocaleDateString('en-US', options)
                    .replace(',', '')  // Remove the comma after the weekday
                    .replace(/(\d+)(st|nd|rd|th)/, '$1')  // Remove ordinal suffix
                    .replace(/,(\s\d{4})/, ' at$1');  // Replace comma before year with " at"
                    
                document.querySelector('.breadcrumb-item.active').textContent = 'Overview as of ' + timeString;
            }
            
            // Update timestamp once when page loads
            updateTimestamp();
            
            // Update timestamp every 60 seconds
            setInterval(updateTimestamp, 60000);

            // Friendly "x time ago" for Last Active
            function timeAgo(dateIso) {
                if (!dateIso) return 'Never';
                const seconds = Math.floor((new Date() - new Date(dateIso)) / 1000);
                const units = [
                    { label: 'year', secs: 31536000 },
                    { label: 'month', secs: 2592000 },
                    { label: 'day', secs: 86400 },
                    { label: 'hour', secs: 3600 },
                    { label: 'minute', secs: 60 }
                ];
                for (const u of units) {
                    const v = Math.floor(seconds / u.secs);
                    if (v >= 1) return `${v} ${u.label}${v>1?'s':''} ago`;
                }
                return 'Just now';
            }
            document.querySelectorAll('.last-active').forEach(el => {
                const iso = el.getAttribute('data-ts');
                if (iso && iso !== '0001-01-01T00:00:00.0000000') {
                    el.textContent = timeAgo(iso);
                } else {
                    el.textContent = 'Never';
                }
            });

            // Simple client-side filter for staff table
            const searchInput = document.getElementById('staffSearch');
            const roleSelect = document.getElementById('roleFilter');
            function applyStaffFilter() {
                const q = (searchInput?.value || '').toLowerCase();
                const role = (roleSelect?.value || 'all').toLowerCase();
                document.querySelectorAll('table.enhanced tbody tr').forEach(row => {
                    const nameCell = row.querySelector('td:nth-child(1)');
                    const roleCell = row.querySelector('td:nth-child(2)');
                    const nameText = (nameCell?.innerText || '').toLowerCase();
                    const roleText = (roleCell?.innerText || '').toLowerCase();
                    const matchesQuery = !q || nameText.includes(q);
                    const matchesRole = role === 'all' || roleText === role;
                    row.style.display = (matchesQuery && matchesRole) ? '' : 'none';
                });
            }
            if (searchInput) searchInput.addEventListener('input', applyStaffFilter);
            if (roleSelect) roleSelect.addEventListener('change', applyStaffFilter);
            applyStaffFilter();

            // Function to show staff details modal
            function showStaffDetailsModal(staffId) {
                // Check if modal already exists
                let modal = document.getElementById('staffDetailsModal');
                if (!modal) {
                    // Create modal
                    modal = document.createElement('div');
                    modal.id = 'staffDetailsModal';
                    modal.className = 'modal fade';
                    modal.setAttribute('tabindex', '-1');
                    modal.setAttribute('aria-hidden', 'true');
                    
                    modal.innerHTML = `
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Staff Details</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="text-center mb-3">
                                        <div class="spinner-border text-primary" role="status">
                                            <span class="visually-hidden">Loading...</span>
                                        </div>
                                        <p class="mt-2">Loading staff details...</p>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    `;
                    
                    document.body.appendChild(modal);
                }
                
                // Initialize and show modal
                const modalInstance = new bootstrap.Modal(modal);
                modalInstance.show();
                
                // Fetch staff details
                fetch(`/api/staff/${staffId}`)
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Failed to load staff details');
                        }
                        return response.json();
                    })
                    .then(staff => {
                        // Update modal with staff details
                        const modalBody = modal.querySelector('.modal-body');
                        modalBody.innerHTML = `
                            <div class="staff-details">
                                <div class="mb-3 text-center">
                                    <div class="avatar-lg mx-auto">
                                        ${staff.name ? staff.name.substring(0, 1) : '?'}
                                    </div>
                                    <h4 class="mt-2">${staff.name || 'Unknown'}</h4>
                                    <span class="badge bg-${staff.isActive ? 'success' : 'danger'}">
                                        ${staff.isActive ? 'Active' : 'Inactive'}
                                    </span>
                                </div>
                                
                                <div class="staff-info">
                                    <div class="row mb-2">
                                        <div class="col-4 fw-bold">Role:</div>
                                        <div class="col-8">${staff.role}</div>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-4 fw-bold">Email:</div>
                                        <div class="col-8">${staff.email || 'N/A'}</div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-4 fw-bold">Phone:</div>
                                        <div class="col-8">${staff.phoneNumber || 'N/A'}</div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-4 fw-bold">Last Active:</div>
                                        <div class="col-8">${new Date(staff.lastActive).toLocaleString()}</div>
                                    </div>
                                </div>
                            </div>
                        `;
                    })
                    .catch(error => {
                        const modalBody = modal.querySelector('.modal-body');
                        modalBody.innerHTML = `
                            <div class="alert alert-danger">
                                <i class="fa-solid fa-circle-exclamation me-2"></i>
                                Failed to load staff details. Please try again later.
                            </div>
                        `;
                        console.error('Error fetching staff details:', error);
                    });
            }
        });
    </script>
}
