@page "{id}"
@model Barangay.Pages.Admin.DeleteStaffMemberModel
@{
    ViewData["Title"] = "Delete Staff Member";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">
            <i class="fa-solid fa-user-xmark text-danger me-2"></i>
            Delete Staff Member
        </h1>
        <div>
            <a asp-page="./AdminDashboard" class="btn btn-secondary">
                <i class="fa-solid fa-arrow-left"></i> Back to Staff List
            </a>
        </div>
    </div>

    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fa-solid fa-triangle-exclamation me-2"></i> Are you sure you want to delete this staff member?
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    @if (Model.StaffMember != null)
    {
        <div class="card mb-3">
            <div class="card-header">
                <i class="fa-solid fa-user-doctor me-1"></i>
                Staff Information
            </div>
            <div class="card-body">
                <h5 class="card-title">@Model.StaffMember.Name</h5>
                <p class="card-text">Position: @Model.StaffMember.Position</p>
                <p class="card-text">Department: @Model.StaffMember.Department</p>
            </div>
            <div class="card-footer">
                <form method="post">
                    <input type="hidden" name="id" value="@Model.StaffMember.Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fa-solid fa-trash me-1"></i> Delete
                    </button>
                    <a asp-page="./AdminDashboard" class="btn btn-secondary ms-2">
                        <i class="fa-solid fa-xmark me-1"></i> Cancel
                    </a>
                </form>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="fa-solid fa-circle-exclamation me-2"></i> Staff member not found.
        </div>
        <a asp-page="./AdminDashboard" class="btn btn-primary">
            <i class="fa-solid fa-arrow-left me-1"></i> Back to Staff List
        </a>
    }
</div>