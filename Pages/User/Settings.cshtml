@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Keep the active tab selected after form submit
        $(document).ready(function() {
            var activeTab = sessionStorage.getItem('activeSettingsTab');
            if (activeTab) {
                $('#settings-tab a[href="' + activeTab + '"]').tab('show');
            }

            $('#settings-tab a').on('click', function(e) {
                sessionStorage.setItem('activeSettingsTab', $(e.target).attr('href'));
            });
        });
    </script>
