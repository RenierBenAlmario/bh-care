@page
@model Barangay.Pages.User.SettingsModel
@{
    ViewData["Title"] = "Settings";
    Layout = "_UserLayout";
    ViewData["ShowDashboardNav"] = true;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-info" role="alert">
                <div class="d-flex align-items-center">
                    <i class="fa-solid fa-gear me-3 fs-4"></i>
                    <div>
                        <strong>Account Settings</strong>
                        <p class="mb-0">Manage your account preferences and personal information.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.StatusMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Settings Menu</h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush" id="settings-tab" role="tablist">
                        <a class="list-group-item list-group-item-action active" id="profile-tab" data-bs-toggle="list" href="#profile" role="tab">
                            <i class="fa-solid fa-user me-2"></i> Profile
                        </a>
                        <a class="list-group-item list-group-item-action" id="security-tab" data-bs-toggle="list" href="#security" role="tab">
                            <i class="fa-solid fa-lock me-2"></i> Security
                        </a>
                        <a class="list-group-item list-group-item-action" id="notifications-tab" data-bs-toggle="list" href="#notifications" role="tab">
                            <i class="fa-solid fa-bell me-2"></i> Notifications
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                    <div class="tab-content">
                        <!-- Profile Settings -->
                        <div class="tab-pane fade show active" id="profile" role="tabpanel">
                            <h4 class="mb-4">Profile Information</h4>
                            <form method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label asp-for="UserProfile.FirstName" class="form-label"></label>
                                        <input asp-for="UserProfile.FirstName" class="form-control">
                                        <span asp-validation-for="UserProfile.FirstName" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="UserProfile.LastName" class="form-label"></label>
                                        <input asp-for="UserProfile.LastName" class="form-control">
                                        <span asp-validation-for="UserProfile.LastName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label asp-for="UserProfile.Email" class="form-label"></label>
                                        <input asp-for="UserProfile.Email" class="form-control" readonly>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="UserProfile.PhoneNumber" class="form-label"></label>
                                        <input asp-for="UserProfile.PhoneNumber" class="form-control">
                                        <span asp-validation-for="UserProfile.PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="UserProfile.Address" class="form-label"></label>
                                    <input asp-for="UserProfile.Address" class="form-control">
                                    <span asp-validation-for="UserProfile.Address" class="text-danger"></span>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label asp-for="UserProfile.DateOfBirth" class="form-label"></label>
                                        <input asp-for="UserProfile.DateOfBirth" class="form-control">
                                        <span asp-validation-for="UserProfile.DateOfBirth" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="UserProfile.Gender" class="form-label"></label>
                                        <select asp-for="UserProfile.Gender" class="form-select">
                                            <option value="">Select Gender</option>
                                            <option value="Male">Male</option>
                                            <option value="Female">Female</option>
                                            <option value="Other">Other</option>
                                            <option value="Prefer not to say">Prefer not to say</option>
                                        </select>
                                        <span asp-validation-for="UserProfile.Gender" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ProfilePicture" class="form-label">Profile Picture</label>
                                    <input asp-for="ProfilePicture" class="form-control" type="file" accept="image/*">
                                </div>

                                <button type="submit" class="btn btn-primary">
                                    <i class="fa-solid fa-floppy-disk me-2"></i> Save Changes
                                </button>
                            </form>
                        </div>

                        <!-- Security Settings -->
                        <div class="tab-pane fade" id="security" role="tabpanel">
                            <h4 class="mb-4">Security Settings</h4>
                            
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h5 class="mb-0">Change Password</h5>
                                </div>
                                <div class="card-body">
                                    <form method="post" asp-page-handler="ChangePassword">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        
                                        <div class="mb-3">
                                            <label asp-for="PasswordModel.OldPassword" class="form-label"></label>
                                            <input asp-for="PasswordModel.OldPassword" class="form-control">
                                            <span asp-validation-for="PasswordModel.OldPassword" class="text-danger"></span>
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="PasswordModel.NewPassword" class="form-label"></label>
                                            <input asp-for="PasswordModel.NewPassword" class="form-control">
                                            <span asp-validation-for="PasswordModel.NewPassword" class="text-danger"></span>
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="PasswordModel.ConfirmPassword" class="form-label"></label>
                                            <input asp-for="PasswordModel.ConfirmPassword" class="form-control">
                                            <span asp-validation-for="PasswordModel.ConfirmPassword" class="text-danger"></span>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Update Password</button>
                                    </form>
                                </div>
                            </div>

                          
                        <!-- Notifications Settings -->
                        <div class="tab-pane fade" id="notifications" role="tabpanel">
                            <h4 class="mb-4">Notification Settings</h4>
                            
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="mb-3">Email Notifications</h5>
                                    <form method="post" asp-page-handler="SaveNotificationSettings">
                                        <div class="mb-3">
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" id="appointmentReminders" asp-for="NotificationSettings.AppointmentReminders">
                                                <label class="form-check-label" for="appointmentReminders">Appointment Reminders</label>
                                            </div>
                                            <small class="text-muted">Receive email reminders for upcoming appointments</small>
                                        </div>
                                        <div class="mb-3">
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" id="prescriptionAlerts" asp-for="NotificationSettings.PrescriptionAlerts">
                                                <label class="form-check-label" for="prescriptionAlerts">Prescription Alerts</label>
                                            </div>
                                            <small class="text-muted">Receive notifications when prescriptions are ready or about to expire</small>
                                        </div>
                                        <div class="mb-3">
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" id="healthTips" asp-for="NotificationSettings.HealthTips">
                                                <label class="form-check-label" for="healthTips">Health Tips & Updates</label>
                                            </div>
                                            <small class="text-muted">Receive occasional health tips and updates from our healthcare providers</small>
                                        </div>
                                        
                                        <button type="submit" class="btn btn-primary mt-3">Save Preferences</button>
                                    </form>
                                </div>
                            </div>
