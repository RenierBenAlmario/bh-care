@page
@model Barangay.Pages.User.PrescriptionsModel
@{
    ViewData["Title"] = "Prescriptions";
    Layout = "_UserLayout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-info" role="alert">
                <div class="d-flex align-items-center">
                    <i class="fas fa-prescription-bottle-alt me-3 fs-4"></i>
                    <div>
                        <strong>My Prescriptions</strong>
                        <p class="mb-0">View and manage your prescriptions from our healthcare providers.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Active Prescriptions</h5>
                    <div>
                        <button class="btn btn-outline-primary">
                            <i class="fas fa-print me-2"></i>Print All
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Date Prescribed</th>
                                    <th>Medication</th>
                                    <th>Dosage</th>
                                    <th>Doctor</th>
                                    <th>Valid Until</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>March 15, 2024</td>
                                    <td>Amoxicillin</td>
                                    <td>500mg, 3x daily after meals</td>
                                    <td>Dr. Maria Santos</td>
                                    <td>March 25, 2024</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary me-1">
                                            <i class="fas fa-eye"></i> View
                                        </button>
                                        <button class="btn btn-sm btn-outline-secondary">
                                            <i class="fas fa-print"></i> Print
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>March 10, 2024</td>
                                    <td>Paracetamol</td>
                                    <td>500mg, as needed for fever or pain</td>
                                    <td>Dr. Jose Reyes</td>
                                    <td>April 10, 2024</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary me-1">
                                            <i class="fas fa-eye"></i> View
                                        </button>
                                        <button class="btn btn-sm btn-outline-secondary">
                                            <i class="fas fa-print"></i> Print
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Prescription History</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Date Prescribed</th>
                                    <th>Medication</th>
                                    <th>Dosage</th>
                                    <th>Doctor</th>
                                    <th>Valid Until</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>February 05, 2024</td>
                                    <td>Amoxicillin</td>
                                    <td>250mg, 3x daily</td>
                                    <td>Dr. Maria Santos</td>
                                    <td>February 15, 2024</td>
                                    <td><span class="badge bg-secondary">Expired</span></td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i> View
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>January 20, 2024</td>
                                    <td>Ibuprofen</td>
                                    <td>400mg, 2x daily</td>
                                    <td>Dr. Jose Reyes</td>
                                    <td>February 05, 2024</td>
                                    <td><span class="badge bg-secondary">Expired</span></td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i> View
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 