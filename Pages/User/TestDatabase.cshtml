@page
@model Barangay.Pages.User.TestDatabaseModel
@{
    ViewData["Title"] = "Database Test";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h4>Database and Encryption Service Test</h4>
                </div>
                <div class="card-body">
                    <button id="testBtn" class="btn btn-primary">Run Test</button>
                    <div id="results" class="mt-3"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.getElementById('testBtn').addEventListener('click', async function() {
    const resultsDiv = document.getElementById('results');
    resultsDiv.innerHTML = '<div class="spinner-border" role="status"><span class="sr-only">Loading...</span></div>';
    
    try {
        const response = await fetch('?handler=OnGetAsync');
        const data = await response.json();
        
        if (data.success) {
            resultsDiv.innerHTML = `
                <div class="alert alert-success">
                    <h5>✅ Test Results</h5>
                    <ul>
                        <li>Database Connection: ${data.canConnect ? '✅ Working' : '❌ Failed'}</li>
                        <li>Encryption Service: ${data.encryptionWorking ? '✅ Working' : '❌ Failed'}</li>
                        <li>Table Structure: ${data.tableExists ? '✅ Valid' : '❌ Invalid'}</li>
                        <li>Test Insert: ${data.testInsertSuccessful ? '✅ Successful' : '❌ Failed'}</li>
                    </ul>
                    <p><strong>Message:</strong> ${data.message}</p>
                </div>
            `;
        } else {
            resultsDiv.innerHTML = `
                <div class="alert alert-danger">
                    <h5>❌ Test Failed</h5>
                    <p><strong>Error:</strong> ${data.error}</p>
                    ${data.stackTrace ? `<details><summary>Stack Trace</summary><pre>${data.stackTrace}</pre></details>` : ''}
                </div>
            `;
        }
    } catch (error) {
        resultsDiv.innerHTML = `
            <div class="alert alert-danger">
                <h5>❌ Test Error</h5>
                <p><strong>Error:</strong> ${error.message}</p>
            </div>
        `;
    }
});
</script>
