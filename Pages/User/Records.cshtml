@page
@model Barangay.Pages.User.RecordsModel
@{
    ViewData["Title"] = "Medical Records";
    Layout = "_UserLayout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-info" role="alert">
                <div class="d-flex align-items-center">
                    <i class="fas fa-file-medical me-3 fs-4"></i>
                    <div>
                        <strong>Medical Records</strong>
                        <p class="mb-0">View your complete medical history and health records.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Vital Signs History -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Vital Signs History</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Temperature</th>
                                    <th>Blood Pressure</th>
                                    <th>Heart Rate</th>
                                    <th>BMI</th>
                                    <th>Weight</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>March 15, 2024</td>
                                    <td>36.8°C</td>
                                    <td>120/80 mmHg</td>
                                    <td>72 bpm</td>
                                    <td>22.5</td>
                                    <td>65 kg</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i> View
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>February 10, 2024</td>
                                    <td>37.1°C</td>
                                    <td>118/78 mmHg</td>
                                    <td>75 bpm</td>
                                    <td>22.8</td>
                                    <td>66 kg</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i> View
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Medical History -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Medical History</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Doctor</th>
                                    <th>Diagnosis</th>
                                    <th>Treatment</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>March 15, 2024</td>
                                    <td>Dr. Maria Santos</td>
                                    <td>Common Cold</td>
                                    <td>Prescribed antibiotics and rest</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i> View
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>January 05, 2024</td>
                                    <td>Dr. Jose Reyes</td>
                                    <td>Annual Check-up</td>
                                    <td>No issues found, recommended regular exercise</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i> View
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Lab Results -->
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Laboratory Results</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Test Type</th>
                                    <th>Result</th>
                                    <th>Normal Range</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>March 15, 2024</td>
                                    <td>Blood Test</td>
                                    <td>Blood Sugar: 95 mg/dL</td>
                                    <td>70-100 mg/dL</td>
                                    <td><span class="badge bg-success">Normal</span></td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i> View
                                        </button>
                                        <button class="btn btn-sm btn-outline-secondary">
                                            <i class="fas fa-download"></i> Download
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>January 05, 2024</td>
                                    <td>Cholesterol</td>
                                    <td>Total: 180 mg/dL</td>
                                    <td><200 mg/dL</td>
                                    <td><span class="badge bg-success">Normal</span></td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i> View
                                        </button>
                                        <button class="btn btn-sm btn-outline-secondary">
                                            <i class="fas fa-download"></i> Download
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 