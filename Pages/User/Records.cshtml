@page
@model Barangay.Pages.User.RecordsModel
@{
    ViewData["Title"] = "Medical Records";
    Layout = "_UserLayout";
    ViewData["ShowDashboardNav"] = true;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-info" role="alert">
                <div class="d-flex align-items-center">
                    <i class="fa-solid fa-file-medical me-3 fs-4"></i>
                    <div>
                        <strong>Medical Records</strong>
                        <p class="mb-0">View your complete medical history and health records.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Vital Signs History -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Vital Signs History</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Temperature</th>
                                    <th>Blood Pressure</th>
                                    <th>Heart Rate</th>
                                    <th>BMI</th>
                                    <th>Weight</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.VitalSigns != null && Model.VitalSigns.Any())
                                {
                                    @foreach (var item in Model.VitalSigns)
                                    {
                                        <tr>
                                            <td>@item.Date.ToShortDateString()</td>
                                            <td>@item.Temperature Â°C</td>
                                            <td>@item.BloodPressure</td>
                                            <td>@item.HeartRate bpm</td>
                                            <td>@(item.Height.HasValue && item.Weight.HasValue ? Math.Round(item.Weight.Value / ((item.Height.Value / 100) * (item.Height.Value / 100)), 1) : 0)</td>
                                            <td>@(item.Weight.HasValue ? $"{item.Weight} kg" : "-")</td>
                                            <td>
                                                <a asp-page="./VitalDetail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="View Details">
                                                    <i class="fa-solid fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center">No vital signs records found</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


     