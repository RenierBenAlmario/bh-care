@page
@model Barangay.Pages.QuickFixModel
@{
    ViewData["Title"] = "Quick Fix Weekend Appointments";
    Layout = "_UserLayout";
}

<div class="container mt-5 pt-3">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">
                <i class="fas fa-tools me-2"></i> Quick Fix: Weekend Appointments
            </h4>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.StatusMessage))
            {
                <div class="alert alert-success">
                    @Model.StatusMessage
                </div>
            }
            
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">
                    @Model.ErrorMessage
                </div>
            }
            
            <div class="row">
                <div class="col-md-8">
                    <h5>Current Doctor Status</h5>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Doctor</th>
                                    <th>Email</th>
                                    <th>Sat</th>
                                    <th>Sun</th>
                                    <th>Hours</th>
                                    <th>Active</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var doctor in Model.Doctors)
                                {
                                    <tr>
                                        <td>@doctor.Name</td>
                                        <td>@doctor.Email</td>
                                        <td><span class="badge @(doctor.Saturday ? "bg-success" : "bg-danger")">@(doctor.Saturday ? "✓" : "✗")</span></td>
                                        <td><span class="badge @(doctor.Sunday ? "bg-success" : "bg-danger")">@(doctor.Sunday ? "✓" : "✗")</span></td>
                                        <td>@doctor.StartTime.ToString(@"hh\:mm") - @doctor.EndTime.ToString(@"hh\:mm")</td>
                                        <td><span class="badge @(doctor.IsAvailable ? "bg-success" : "bg-danger")">@(doctor.IsAvailable ? "Active" : "Inactive")</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h6 class="mb-0">Fix Weekend Appointments</h6>
                        </div>
                        <div class="card-body">
                            <form method="post">
                                <div class="d-grid gap-2">
                                    <button type="submit" asp-page-handler="FixWeekends" class="btn btn-success btn-lg">
                                        <i class="fas fa-calendar-week me-2"></i>Enable Weekend Appointments
                                    </button>
                                </div>
                            </form>
                            
                            <hr>
                            
                            <div class="alert alert-info">
                                <strong>What this does:</strong><br>
                                • Enables Saturday & Sunday for all doctors<br>
                                • Sets working hours to 8AM-5PM<br>
                                • Creates missing availability records<br>
                                • Fixes "Libreng Tuli" weekend appointments
                            </div>
                            
                            <div class="alert alert-warning">
                                <strong>After fixing:</strong><br>
                                Go back to booking and try selecting:<br>
                                • Saturday or Sunday date<br>
                                • "Libreng Tuli" consultation type<br>
                                • Time slots should appear!
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
