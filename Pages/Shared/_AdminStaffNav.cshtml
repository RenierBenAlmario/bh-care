@using Microsoft.AspNetCore.Identity
@using Barangay.Models
@using Barangay.Services

@inject UserManager<ApplicationUser> UserManager
@inject PermissionService PermissionService

@{
    var user = await UserManager.GetUserAsync(User);
    var currentUrl = Context.Request.Path;
}

<nav class="navbar-vertical navbar">
    <div class="nav accordion" id="accordionSidenav">
        <!-- Dashboard -->
        <li class="nav-item">
            <a class="nav-link @(currentUrl.Value.Contains("/AdminStaff/Dashboard") ? "active" : "")" 
               asp-page="/AdminStaff/Dashboard">
                <div class="nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                Dashboard
            </a>
        </li>

        <!-- Patients -->
        <a class="nav-link @(currentUrl.Value.Contains("/AdminStaff/Patient") ? "active" : "") collapsed" 
           href="#" data-bs-toggle="collapse" data-bs-target="#collapsePatients" 
           aria-expanded="@(currentUrl.Value.Contains("/AdminStaff/Patient") ? "true" : "false")" 
           aria-controls="collapsePatients">
            <div class="nav-link-icon"><i class="fas fa-users"></i></div>
            Patients
            <div class="sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
        </a>
        <div class="collapse @(currentUrl.Value.Contains("/AdminStaff/Patient") ? "show" : "")" 
             id="collapsePatients" data-bs-parent="#accordionSidenav">
            <nav class="sidenav-menu-nested nav">
                <a class="nav-link @(currentUrl.Value.Contains("/AdminStaff/PatientsList") ? "active" : "")" 
                   asp-page="/AdminStaff/PatientsList">
                    <i class="fas fa-list fa-fw me-2"></i> Patients List
                </a>
                <a class="nav-link @(currentUrl.Value.Contains("/AdminStaff/AddPatient") ? "active" : "")" 
                   asp-page="/AdminStaff/AddPatient">
                    <i class="fas fa-user-plus fa-fw me-2"></i> Add New Patient
                </a>
                <a class="nav-link @(currentUrl.Value.Contains("/AdminStaff/PatientRecords") ? "active" : "")" 
                   asp-page="/AdminStaff/PatientRecords">
                    <i class="fas fa-folder-open fa-fw me-2"></i> Medical Records
                </a>
            </nav>
        </div>

        <!-- Appointments -->
        <a class="nav-link @(currentUrl.Value.Contains("/AdminStaff/ManageAppointments") ? "active" : "") collapsed"
           href="#" data-bs-toggle="collapse" data-bs-target="#collapseAppointments"
           aria-expanded="@(currentUrl.Value.Contains("/AdminStaff/ManageAppointments") ? "true" : "false")"
           aria-controls="collapseAppointments">
            <div class="nav-link-icon"><i class="fas fa-calendar-alt"></i></div>
            Appointments
            <div class="sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
        </a>
        <div class="collapse @(currentUrl.Value.Contains("/AdminStaff/ManageAppointments") ? "show" : "")"
             id="collapseAppointments" data-bs-parent="#accordionSidenav">
            <nav class="sidenav-menu-nested nav">
                <a class="nav-link @(currentUrl.Value.Contains("/AdminStaff/ManageAppointments") ? "active" : "")"
                   asp-page="/AdminStaff/ManageAppointments">
                    <i class="fas fa-calendar-check fa-fw me-2"></i> Manage Appointments
                </a>
            </nav>
        </div>

        <!-- Reports -->
        <a class="nav-link @(currentUrl.Value.Contains("/AdminStaff/Reports") ? "active" : "") collapsed"
           href="#" data-bs-toggle="collapse" data-bs-target="#collapseReports"
           aria-expanded="@(currentUrl.Value.Contains("/AdminStaff/Reports") ? "true" : "false")"
           aria-controls="collapseReports">
            <div class="nav-link-icon"><i class="fas fa-chart-bar"></i></div>
            Reports
            <div class="sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
        </a>
        <div class="collapse @(currentUrl.Value.Contains("/AdminStaff/Reports") ? "show" : "")"
             id="collapseReports" data-bs-parent="#accordionSidenav">
            <nav class="sidenav-menu-nested nav">
                <a class="nav-link @(currentUrl.Value.Contains("/AdminStaff/Reports/DailyConsultations") ? "active" : "")"
                   asp-page="/AdminStaff/Reports/DailyConsultations">
                    <i class="fas fa-file-medical fa-fw me-2"></i> Daily Consultations
                </a>
                <a class="nav-link @(currentUrl.Value.Contains("/AdminStaff/Reports/PatientRegistrations") ? "active" : "")"
                   asp-page="/AdminStaff/Reports/PatientRegistrations">
                    <i class="fas fa-user-plus fa-fw me-2"></i> Patient Registrations
                </a>
                <a class="nav-link @(currentUrl.Value.Contains("/AdminStaff/Reports/AppointmentSummary") ? "active" : "")"
                   asp-page="/AdminStaff/Reports/AppointmentSummary">
                    <i class="fas fa-calendar-check fa-fw me-2"></i> Appointment Summary
                </a>
            </nav>
        </div>
    </div>
</nav> 