@inject Microsoft.AspNetCore.Identity.UserManager<Barangay.Models.ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Barangay Health Care</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Theme: Orange + White -->
    <link rel="stylesheet" href="~/css/theme-orange.css" asp-append-version="true" />
    <!-- Nurse Orange Theme CSS -->
    <link rel="stylesheet" href="~/css/nurse-orange.css" asp-append-version="true" />
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" asp-append-version="true">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/custom-site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />

    <style>
        body {
            overflow-x: hidden;
        }

        .sidebar {
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            z-index: 100;
            padding: 48px 0 0;
            box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
            background-color: var(--color-primary);
            transition: all 0.3s ease;
            width: 250px;
            overflow-x: hidden;
        }

        .sidebar.collapsed {
            width: 60px;
        }

        .sidebar-sticky {
            position: relative;
            top: 0;
            height: calc(100vh - 48px);
            padding-top: .5rem;
            overflow-x: hidden;
            overflow-y: auto;
        }

        .sidebar .nav-link {
            font-weight: 500;
            color: rgba(255, 255, 255, 0.95);
            padding: .75rem .85rem;
            display: flex;
            align-items: center;
            transition: background .2s ease, color .2s ease;
            white-space: nowrap;
            overflow: hidden;
            border-radius: 10px;
            margin: 4px 8px;
        }

        .sidebar.collapsed .nav-link {
            padding: 1rem 0;
            justify-content: center;
        }

        .sidebar .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.18);
            color: #ffffff;
            text-decoration: none;
        }

        .sidebar .nav-link.active {
            background-color: rgba(0, 0, 0, 0.18); /* darker overlay for visibility */
            color: #ffffff;
            border-left: 3px solid #ffffff;
        }

        /* Simplified color palette overrides for Nurse area */
        .nurse .btn-info,
        .nurse .btn-info:hover,
        .nurse .btn-info:focus {
            background-color: var(--color-primary) !important;
            border-color: var(--color-primary) !important;
            color: #fff !important;
        }
        .nurse .badge.bg-primary,
        .nurse .badge.bg-info {
            background-color: var(--color-primary) !important;
        }
        .nurse .badge.bg-warning { background-color: #F6C445 !important; color: #1f2a37; }
        .nurse .badge.bg-danger { background-color: #9CA3AF !important; color: #111827; }
        .nurse .badge.bg-secondary { background-color: #9CA3AF !important; color: #111827; }

        .sidebar .nav-link i {
            margin-right: 0.5rem;
            width: 20px;
            text-align: center;
            font-size: 1.1rem;
        }

        .sidebar.collapsed .nav-link i {
            margin-right: 0;
        }

        .sidebar.collapsed .nav-link span {
            display: none;
        }

        .sidebar-profile {
            padding: 1.5rem;
            text-align: center;
            color: #ffffff;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            margin-bottom: 1rem;
            transition: all 0.3s;
        }

        .sidebar.collapsed .sidebar-profile {
            padding: 0.5rem;
        }

        .sidebar-profile .user-name {
            margin-bottom: 0.25rem;
            font-weight: 600;
        }

        .sidebar.collapsed .sidebar-profile .user-name,
        .sidebar.collapsed .sidebar-profile small {
            display: none;
        }

        /* Hide expand/collapse button (not required) */
        #sidebarToggle { display: none !important; }

        .sidebar.collapsed + #sidebarToggle { left: 60px; }

        #sidebarToggle:hover { }

        #sidebarToggle i { }

        .sidebar.collapsed + #sidebarToggle i { }

        .main-content {
            margin-left: 250px;
            transition: all 0.3s;
            padding: 1rem 1.25rem 1.5rem;
            min-height: 100vh;
            background-color: #fff;
            box-sizing: border-box;
        }

        /* Constrain and center typical content wrappers */
        .main-content .container,
        .main-content .container-fluid,
        .main-content > section,
        .main-content > div {
            max-width: 1200px;
            margin: 0 auto;
        }

        .sidebar.collapsed ~ .main-content {
            margin-left: 60px;
        }

        @@media screen and (max-width: 768px) {
            .sidebar {
                margin-left: -250px;
            }

            .sidebar.collapsed {
                margin-left: -60px;
            }

            .sidebar.show {
                margin-left: 0;
            }

            .main-content {
                margin-left: 0;
                padding: 0.5rem;
            }

            #sidebarToggle {
                left: 0;
            }

            #sidebarToggle.show {
                left: 250px;
            }

            .sidebar.collapsed.show {
                margin-left: 0;
            }
        }

        .sidebar-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 99;
            display: none;
        }

        @@media screen and (max-width: 768px) {
            .sidebar-overlay.show {
                display: block;
            }
        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="nurse">

<div class="wrapper d-flex">
    <!-- Sidebar -->
    <nav class="sidebar" id="sidebar">
        
        <div class="sidebar-sticky overflow-y-auto h-screen">
            <div class="sidebar-profile">
                <i class="fas fa-user-nurse fa-3x mb-2"></i>
                @{ 
                    var currentUser = await UserManager.GetUserAsync(User);
                    var displayName = !string.IsNullOrWhiteSpace(currentUser?.FullName)
                        ? currentUser.FullName
                        : (!string.IsNullOrWhiteSpace(currentUser?.Name) ? currentUser.Name : User.Identity?.Name);
                }
                <p class="user-name">@displayName</p>
                <small class="text-white-50">Nurse</small>
            </div>

            <ul class="nav flex-column">
                @await Component.InvokeAsync("SidebarMenu", new { role = "nurse" })
                
                <li class="nav-item mt-3">
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post">
                        <button type="submit" class="nav-link w-100 btn btn-link text-left">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Logout</span>
                        </button>
                    </form>
                </li>
                
            </ul>
        </div>
    </nav>

    <!-- Sidebar Overlay -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- Main content wrapper -->
    <div class="main-content" id="mainContent">
        @RenderBody()
    </div>
</div>

<!-- Bootstrap JS -->
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<!-- Active link highlighter for nurse sidebar -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    const path = (location.pathname || '').toLowerCase();
    document.querySelectorAll('#sidebar .nav-link').forEach(a => {
        const href = (a.getAttribute('href') || '').toLowerCase();
        if (href && path.startsWith(href)) {
            a.classList.add('active');
        }
    });
});
</script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
