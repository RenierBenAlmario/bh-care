@page
@model Barangay.Pages.Nurse.ImmunizationRecordsModel
@{
    ViewData["Title"] = "Immunization Records";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="fas fa-vaccine text-primary me-2"></i>
                    Immunization Records
                </h2>
                <div>
                    <a asp-page="/Nurse/ManualForms" class="btn btn-primary me-2">
                        <i class="fas fa-plus me-1"></i>
                        New Record
                    </a>
                    <a asp-page="/Nurse/Dashboard" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>
                        Back to Dashboard
                    </a>
                </div>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Search and Filter Section -->
            <div class="card mb-4">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-4">
                            <label for="searchTerm" class="form-label">Search Child Name</label>
                            <input type="text" class="form-control" id="searchTerm" name="searchTerm" 
                                   value="@Model.SearchTerm" placeholder="Enter child name...">
                        </div>
                        <div class="col-md-3">
                            <label for="barangay" class="form-label">Barangay</label>
                            <select class="form-select" id="barangay" name="barangay">
                                <option value="">All Barangays</option>
                                <option value="161" selected="@(Model.SelectedBarangay == "161")">161</option>
                                <option value="162" selected="@(Model.SelectedBarangay == "162")">162</option>
                                <option value="163" selected="@(Model.SelectedBarangay == "163")">163</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="familyNumber" class="form-label">Family Number</label>
                            <input type="text" class="form-control" id="familyNumber" name="familyNumber" 
                                   value="@Model.FamilyNumber" placeholder="Enter family number...">
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">&nbsp;</label>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search me-1"></i>
                                    Search
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Records Table -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-list me-2"></i>
                        Records (@Model.Records.Count() records found)
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.Records.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Family #</th>
                                        <th>Child Name</th>
                                        <th>Date of Birth</th>
                                        <th>Mother's Name</th>
                                        <th>Barangay</th>
                                        <th>Health Center</th>
                                        <th>Contact</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var record in Model.Records)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-primary">@record.FamilyNumber</span>
                                            </td>
                                            <td>
                                                <strong>@record.ChildName</strong>
                                                <br>
                                                <small class="text-muted">@record.Sex</small>
                                            </td>
                                            <td>
                                                @record.DateOfBirth
                                                <br>
                                                @if (DateTime.TryParse(record.DateOfBirth, out DateTime birthDate))
                                                {
                                                    <small class="text-muted">@((DateTime.Now - birthDate).Days / 365) years old</small>
                                                }
                                            </td>
                                            <td>@record.MotherName</td>
                                            <td>
                                                <span class="badge bg-info">@record.Barangay</span>
                                            </td>
                                            <td>@record.HealthCenter</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(record.ContactNumber))
                                                {
                                                    <div>@record.ContactNumber</div>
                                                }
                                                @if (!string.IsNullOrEmpty(record.Email))
                                                {
                                                    <small class="text-muted">@record.Email</small>
                                                }
                                            </td>
                                            <td>
                                                @record.CreatedAt
                                                <br>
                                                <small class="text-muted">by @record.CreatedBy</small>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <button type="button" class="btn btn-outline-primary btn-sm" 
                                                            data-bs-toggle="modal" data-bs-target="#viewModal-@record.Id"
                                                            title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-outline-warning btn-sm" 
                                                            data-bs-toggle="modal" data-bs-target="#editModal-@record.Id"
                                                            title="Edit Record">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-outline-danger btn-sm" 
                                                            onclick="confirmDelete(@record.Id, '@record.ChildName')"
                                                            title="Delete Record">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No immunization records found</h5>
                            <p class="text-muted">Start by creating a new immunization record.</p>
                            <a asp-page="/Nurse/ManualForms" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>
                                Create First Record
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the immunization record for <strong id="childNameToDelete"></strong>?</p>
                <p class="text-danger"><small>This action cannot be undone.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" asp-page-handler="Delete" style="display: inline;">
                    <input type="hidden" id="recordIdToDelete" name="id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>
                        Delete Record
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(recordId, childName) {
            document.getElementById('recordIdToDelete').value = recordId;
            document.getElementById('childNameToDelete').textContent = childName;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}

<!-- View Modal Template -->
@foreach (var record in Model.Records)
{
    <div class="modal fade" id="viewModal-@record.Id" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-vaccine text-primary me-2"></i>
                        Immunization Record - @record.ChildName
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-primary">Child Information</h6>
                            <p><strong>Name:</strong> @record.ChildName</p>
                            <p><strong>Date of Birth:</strong> @record.DateOfBirth</p>
                            <p><strong>Place of Birth:</strong> @record.PlaceOfBirth</p>
                            <p><strong>Sex:</strong> @record.Sex</p>
                            <p><strong>Birth Height:</strong> @record.BirthHeight cm</p>
                            <p><strong>Birth Weight:</strong> @record.BirthWeight kg</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-primary">Family Information</h6>
                            <p><strong>Family Number:</strong> @record.FamilyNumber</p>
                            <p><strong>Mother's Name:</strong> @record.MotherName</p>
                            <p><strong>Father's Name:</strong> @record.FatherName</p>
                            <p><strong>Address:</strong> @record.Address</p>
                            <p><strong>Barangay:</strong> @record.Barangay</p>
                            <p><strong>Health Center:</strong> @record.HealthCenter</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-primary">Contact Information</h6>
                            <p><strong>Email:</strong> @record.Email</p>
                            <p><strong>Contact Number:</strong> @record.ContactNumber</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-primary">Record Information</h6>
                            <p><strong>Created:</strong> @record.CreatedAt</p>
                            <p><strong>Created By:</strong> @record.CreatedBy</p>
                            <p><strong>Updated:</strong> @record.UpdatedAt</p>
                            <p><strong>Updated By:</strong> @record.UpdatedBy</p>
                        </div>
                    </div>
                    
                    <hr>
                    <h6 class="text-primary">
                        <i class="fas fa-syringe me-2"></i>
                        Vaccine Information
                    </h6>
                    <div class="table-responsive">
                        <table class="table table-bordered table-sm">
                            <thead class="table-light">
                                <tr>
                                    <th>Vaccine</th>
                                    <th>Date Given</th>
                                    <th>Remarks</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (!string.IsNullOrEmpty(record.BCGVaccineDate) || !string.IsNullOrEmpty(record.BCGVaccineRemarks))
                                {
                                    <tr>
                                        <td><strong>BCG Vaccine</strong></td>
                                        <td>@(record.BCGVaccineDate ?? "Not given")</td>
                                        <td>@record.BCGVaccineRemarks</td>
                                    </tr>
                                }
                                @if (!string.IsNullOrEmpty(record.HepatitisBVaccineDate) || !string.IsNullOrEmpty(record.HepatitisBVaccineRemarks))
                                {
                                    <tr>
                                        <td><strong>Hepatitis B Vaccine</strong></td>
                                        <td>@(record.HepatitisBVaccineDate ?? "Not given")</td>
                                        <td>@record.HepatitisBVaccineRemarks</td>
                                    </tr>
                                }
                                @if (!string.IsNullOrEmpty(record.Pentavalent1Date) || !string.IsNullOrEmpty(record.Pentavalent2Date) || !string.IsNullOrEmpty(record.Pentavalent3Date) || 
                                     !string.IsNullOrEmpty(record.Pentavalent1Remarks) || !string.IsNullOrEmpty(record.Pentavalent2Remarks) || !string.IsNullOrEmpty(record.Pentavalent3Remarks))
                                {
                                    <tr>
                                        <td><strong>Pentavalent Vaccine</strong></td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(record.Pentavalent1Date)) { <text>Dose 1: @record.Pentavalent1Date<br></text> }
                                            @if (!string.IsNullOrEmpty(record.Pentavalent2Date)) { <text>Dose 2: @record.Pentavalent2Date<br></text> }
                                            @if (!string.IsNullOrEmpty(record.Pentavalent3Date)) { <text>Dose 3: @record.Pentavalent3Date</text> }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(record.Pentavalent1Remarks)) { <text>Dose 1: @record.Pentavalent1Remarks<br></text> }
                                            @if (!string.IsNullOrEmpty(record.Pentavalent2Remarks)) { <text>Dose 2: @record.Pentavalent2Remarks<br></text> }
                                            @if (!string.IsNullOrEmpty(record.Pentavalent3Remarks)) { <text>Dose 3: @record.Pentavalent3Remarks</text> }
                                        </td>
                                    </tr>
                                }
                                @if (!string.IsNullOrEmpty(record.OPV1Date) || !string.IsNullOrEmpty(record.OPV2Date) || !string.IsNullOrEmpty(record.OPV3Date) || 
                                     !string.IsNullOrEmpty(record.OPV1Remarks) || !string.IsNullOrEmpty(record.OPV2Remarks) || !string.IsNullOrEmpty(record.OPV3Remarks))
                                {
                                    <tr>
                                        <td><strong>OPV Vaccine</strong></td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(record.OPV1Date)) { <text>Dose 1: @record.OPV1Date<br></text> }
                                            @if (!string.IsNullOrEmpty(record.OPV2Date)) { <text>Dose 2: @record.OPV2Date<br></text> }
                                            @if (!string.IsNullOrEmpty(record.OPV3Date)) { <text>Dose 3: @record.OPV3Date</text> }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(record.OPV1Remarks)) { <text>Dose 1: @record.OPV1Remarks<br></text> }
                                            @if (!string.IsNullOrEmpty(record.OPV2Remarks)) { <text>Dose 2: @record.OPV2Remarks<br></text> }
                                            @if (!string.IsNullOrEmpty(record.OPV3Remarks)) { <text>Dose 3: @record.OPV3Remarks</text> }
                                        </td>
                                    </tr>
                                }
                                @if (!string.IsNullOrEmpty(record.IPV1Date) || !string.IsNullOrEmpty(record.IPV2Date) || 
                                     !string.IsNullOrEmpty(record.IPV1Remarks) || !string.IsNullOrEmpty(record.IPV2Remarks))
                                {
                                    <tr>
                                        <td><strong>IPV Vaccine</strong></td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(record.IPV1Date)) { <text>Dose 1: @record.IPV1Date<br></text> }
                                            @if (!string.IsNullOrEmpty(record.IPV2Date)) { <text>Dose 2: @record.IPV2Date</text> }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(record.IPV1Remarks)) { <text>Dose 1: @record.IPV1Remarks<br></text> }
                                            @if (!string.IsNullOrEmpty(record.IPV2Remarks)) { <text>Dose 2: @record.IPV2Remarks</text> }
                                        </td>
                                    </tr>
                                }
                                @if (!string.IsNullOrEmpty(record.PCV1Date) || !string.IsNullOrEmpty(record.PCV2Date) || !string.IsNullOrEmpty(record.PCV3Date) || 
                                     !string.IsNullOrEmpty(record.PCV1Remarks) || !string.IsNullOrEmpty(record.PCV2Remarks) || !string.IsNullOrEmpty(record.PCV3Remarks))
                                {
                                    <tr>
                                        <td><strong>PCV Vaccine</strong></td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(record.PCV1Date)) { <text>Dose 1: @record.PCV1Date<br></text> }
                                            @if (!string.IsNullOrEmpty(record.PCV2Date)) { <text>Dose 2: @record.PCV2Date<br></text> }
                                            @if (!string.IsNullOrEmpty(record.PCV3Date)) { <text>Dose 3: @record.PCV3Date</text> }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(record.PCV1Remarks)) { <text>Dose 1: @record.PCV1Remarks<br></text> }
                                            @if (!string.IsNullOrEmpty(record.PCV2Remarks)) { <text>Dose 2: @record.PCV2Remarks<br></text> }
                                            @if (!string.IsNullOrEmpty(record.PCV3Remarks)) { <text>Dose 3: @record.PCV3Remarks</text> }
                                        </td>
                                    </tr>
                                }
                                @if (!string.IsNullOrEmpty(record.MMR1Date) || !string.IsNullOrEmpty(record.MMR2Date) || 
                                     !string.IsNullOrEmpty(record.MMR1Remarks) || !string.IsNullOrEmpty(record.MMR2Remarks))
                                {
                                    <tr>
                                        <td><strong>MMR Vaccine</strong></td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(record.MMR1Date)) { <text>Dose 1: @record.MMR1Date<br></text> }
                                            @if (!string.IsNullOrEmpty(record.MMR2Date)) { <text>Dose 2: @record.MMR2Date</text> }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(record.MMR1Remarks)) { <text>Dose 1: @record.MMR1Remarks<br></text> }
                                            @if (!string.IsNullOrEmpty(record.MMR2Remarks)) { <text>Dose 2: @record.MMR2Remarks</text> }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Modal -->
    <div class="modal fade" id="editModal-@record.Id" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-warning text-dark">
                    <h5 class="modal-title">
                        <i class="fas fa-edit me-2"></i>
                        Edit Immunization Record - @record.ChildName
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form method="post" asp-page-handler="Update">
                        <input type="hidden" name="id" value="@record.Id" />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Child Name</label>
                                    <input type="text" class="form-control" name="ChildName" value="@record.ChildName" required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Date of Birth</label>
                                    <input type="date" class="form-control" name="DateOfBirth" value="@record.DateOfBirth" required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Mother's Name</label>
                                    <input type="text" class="form-control" name="MotherName" value="@record.MotherName" required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Father's Name</label>
                                    <input type="text" class="form-control" name="FatherName" value="@record.FatherName" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Sex</label>
                                    <select class="form-control" name="Sex" required>
                                        <option value="Male" selected="@(record.Sex == "Male")">Male</option>
                                        <option value="Female" selected="@(record.Sex == "Female")">Female</option>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Address</label>
                                    <textarea class="form-control" name="Address" rows="2">@record.Address</textarea>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Barangay</label>
                                    <input type="text" class="form-control" name="Barangay" value="@record.Barangay" required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Health Center</label>
                                    <input type="text" class="form-control" name="HealthCenter" value="@record.HealthCenter" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input type="email" class="form-control" name="Email" value="@record.Email" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Contact Number</label>
                                    <input type="text" class="form-control" name="ContactNumber" value="@record.ContactNumber" />
                                </div>
                            </div>
                        </div>

                        <!-- Vaccine Information Section -->
                        <hr>
                        <h6 class="text-primary mb-3">
                            <i class="fas fa-syringe me-2"></i>
                            Vaccine Information
                        </h6>
                        
                        <div class="table-responsive">
                            <table class="table table-bordered table-sm">
                                <thead class="table-light">
                                    <tr>
                                        <th>Vaccine</th>
                                        <th>Dose</th>
                                        <th>Date Given</th>
                                        <th>Remarks</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- BCG Vaccine -->
                                    <tr>
                                        <td>
                                            <strong>BCG Vaccine</strong><br>
                                            <small class="text-muted">At Birth</small>
                                        </td>
                                        <td>①</td>
                                        <td>
                                            <input type="date" class="form-control form-control-sm" 
                                                   name="BCGVaccineDate" 
                                                   value="@record.BCGVaccineDate" />
                                        </td>
                                        <td>
                                            <input type="text" class="form-control form-control-sm" 
                                                   name="BCGVaccineRemarks" 
                                                   value="@record.BCGVaccineRemarks" 
                                                   placeholder="Return date or notes" />
                                        </td>
                                    </tr>

                                    <!-- Hepatitis B Vaccine -->
                                    <tr>
                                        <td>
                                            <strong>Hepatitis B Vaccine</strong><br>
                                            <small class="text-muted">At Birth</small>
                                        </td>
                                        <td>①</td>
                                        <td>
                                            <input type="date" class="form-control form-control-sm" 
                                                   name="HepatitisBVaccineDate" 
                                                   value="@(record.HepatitisBVaccineDate)" />
                                        </td>
                                        <td>
                                            <input type="text" class="form-control form-control-sm" 
                                                   name="HepatitisBVaccineRemarks" 
                                                   value="@record.HepatitisBVaccineRemarks" 
                                                   placeholder="Return date or notes" />
                                        </td>
                                    </tr>

                                    <!-- Pentavalent Vaccine Doses -->
                                    <tr>
                                        <td rowspan="3">
                                            <strong>Pentavalent Vaccine</strong><br>
                                            <small class="text-muted">DPT, Hep B, HiB</small>
                                        </td>
                                        <td>①</td>
                                        <td>
                                            <input type="date" class="form-control form-control-sm" 
                                                   name="pentavalent1Date" 
                                                   value="@(record.Pentavalent1Date)" />
                                        </td>
                                        <td>
                                            <input type="text" class="form-control form-control-sm" 
                                                   name="pentavalent1Remarks" 
                                                   value="@record.Pentavalent1Remarks" 
                                                   placeholder="Return date or notes" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>②</td>
                                        <td>
                                            <input type="date" class="form-control form-control-sm" 
                                                   name="pentavalent2Date" 
                                                   value="@(record.Pentavalent2Date)" />
                                        </td>
                                        <td>
                                            <input type="text" class="form-control form-control-sm" 
                                                   name="pentavalent2Remarks" 
                                                   value="@record.Pentavalent2Remarks" 
                                                   placeholder="Return date or notes" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>③</td>
                                        <td>
                                            <input type="date" class="form-control form-control-sm" 
                                                   name="pentavalent3Date" 
                                                   value="@(record.Pentavalent3Date)" />
                                        </td>
                                        <td>
                                            <input type="text" class="form-control form-control-sm" 
                                                   name="pentavalent3Remarks" 
                                                   value="@record.Pentavalent3Remarks" 
                                                   placeholder="Return date or notes" />
                                        </td>
                                    </tr>

                                    <!-- OPV Vaccine Doses -->
                                    <tr>
