@page
@model Barangay.Pages.Nurse.ImmunizationRequestsModel
@{
    ViewData["Title"] = "Immunization Requests";
    Layout = "_NurseLayout";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="m-0">Immunization Schedule Requests</h2>
        <div>
            <a href="/Nurse/ImmunizationShortcut" class="btn btn-primary me-2">
                <i class="fas fa-plus me-1"></i>
                New Request
            </a>
            <a href="/Nurse/Immunization" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i>
                Back to Immunization
            </a>
        </div>
    </div>

    <!-- Search and Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="searchTerm" class="form-label">Search Child Name</label>
                    <input type="text" class="form-control" id="searchTerm" name="searchTerm" value="@Model.SearchTerm" placeholder="Enter child's name...">
                </div>
                <div class="col-md-3">
                    <label for="barangay" class="form-label">Barangay</label>
                    <select class="form-control" id="barangay" name="barangay">
                        <option value="">All Barangays</option>
                        <option value="Barangay 158" selected="@(Model.SelectedBarangay == "Barangay 158")">Barangay 158</option>
                        <option value="Barangay 159" selected="@(Model.SelectedBarangay == "Barangay 159")">Barangay 159</option>
                        <option value="Barangay 160" selected="@(Model.SelectedBarangay == "Barangay 160")">Barangay 160</option>
                        <option value="Barangay 161" selected="@(Model.SelectedBarangay == "Barangay 161")">Barangay 161</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="status" class="form-label">Status</label>
                    <select class="form-control" id="status" name="status">
                        <option value="">All Status</option>
                        <option value="Pending" selected="@(Model.SelectedStatus == "Pending")">Pending</option>
                        <option value="Scheduled" selected="@(Model.SelectedStatus == "Scheduled")">Scheduled</option>
                        <option value="Completed" selected="@(Model.SelectedStatus == "Completed")">Completed</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">&nbsp;</label>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search me-1"></i>
                            Search
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Requests Table -->
    <div class="card">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>
                Schedule Requests (@Model.Requests.Count requests found)
            </h5>
        </div>
        <div class="card-body">
            @if (Model.Requests.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Child Name</th>
                                <th>Mother</th>
                                <th>Email</th>
                                <th>Barangay</th>
                                <th>Preferred Date</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var request in Model.Requests)
                            {
                                <tr>
                                    <td>
                                        <strong>@request.ChildName</strong>
                                    </td>
                                    <td>@request.MotherName</td>
                                    <td>
                                        <a href="mailto:@request.Email" class="text-decoration-none">
                                            @request.Email
                                        </a>
                                    </td>
                                    <td>@request.Barangay</td>
                                    <td>
                                        @request.PreferredDate
                                        @if (!string.IsNullOrEmpty(request.PreferredTime))
                                        {
                                            <br><small class="text-muted">@request.PreferredTime</small>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @(request.Status switch {
                                            "Pending" => "bg-warning",
                                            "Scheduled" => "bg-info", 
                                            "Completed" => "bg-success",
                                            _ => "bg-secondary"
                                        })">
                                            @request.Status
                                        </span>
                                    </td>
                                    <td>@request.CreatedAt</td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <button type="button" class="btn btn-outline-primary" onclick="viewDetails(@request.Id)" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <a href="/Nurse/CreateImmunizationRecord?childName=@request.ChildName&motherName=@request.MotherName&email=@request.Email&barangay=@request.Barangay&address=@request.Address" class="btn btn-outline-success" title="Create Full Record">
                                                <i class="fas fa-plus"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-warning" onclick="sendReminder('@request.Email', '@request.MotherName')" title="Send Reminder">
                                                <i class="fas fa-envelope"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-calendar-plus fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No schedule requests found</h5>
                    <p class="text-muted">Start by creating a new schedule request.</p>
                    <a href="/Nurse/ImmunizationShortcut" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>
                        Create First Request
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Request Details Modal -->
<div class="modal fade" id="requestDetailsModal" tabindex="-1" aria-labelledby="requestDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="requestDetailsModalLabel">Request Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="requestDetailsContent">
                <!-- Content will be loaded here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Html.AntiForgeryToken()
    <script>
        function viewDetails(requestId) {
            // This would typically load details via AJAX
            // For now, we'll show a simple message
            document.getElementById('requestDetailsContent').innerHTML = `
                <div class="text-center">
                    <i class="fas fa-info-circle fa-3x text-info mb-3"></i>
                    <h5>Request Details</h5>
                    <p class="text-muted">Detailed view for request ID: ${requestId}</p>
                    <p class="text-muted">This feature can be expanded to show full request details.</p>
                </div>
            `;
            new bootstrap.Modal(document.getElementById('requestDetailsModal')).show();
        }

        function sendReminder(email, motherName) {
            if (confirm(`Send reminder email to ${motherName} (${email})?`)) {
                // Show loading state
                const button = event.target.closest('button');
                const originalContent = button.innerHTML;
                button.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
                button.disabled = true;

                // Send AJAX request to backend
                fetch('/Nurse/ImmunizationRequests?handler=SendReminder', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: `email=${encodeURIComponent(email)}&motherName=${encodeURIComponent(motherName)}`
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                    } else {
                        alert(data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while sending the reminder email.');
                })
                .finally(() => {
                    // Restore button state
                    button.innerHTML = originalContent;
                    button.disabled = false;
                });
            }
        }
    </script>
}
