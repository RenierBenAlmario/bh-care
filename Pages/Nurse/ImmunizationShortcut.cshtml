@page
@model Barangay.Pages.Nurse.ImmunizationShortcutModel
@{
    ViewData["Title"] = "Immunization Schedule Request";
    Layout = "_NurseLayout";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="m-0">Immunization Schedule Request</h2>
        <a href="/Nurse/Immunization" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>
            Back to Immunization
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-calendar-plus me-2"></i>
                        Quick Schedule Request Form
                    </h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Form.ChildName" class="form-label">Child's Name *</label>
                                    <input asp-for="Form.ChildName" class="form-control" required />
                                    <span asp-validation-for="Form.ChildName" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Form.MotherName" class="form-label">Mother's Name *</label>
                                    <input asp-for="Form.MotherName" class="form-control" required />
                                    <span asp-validation-for="Form.MotherName" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Form.FatherName" class="form-label">Father's Name</label>
                                    <input asp-for="Form.FatherName" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Form.Email" class="form-label">Email Address *</label>
                                    <input asp-for="Form.Email" type="email" class="form-control" required />
                                    <span asp-validation-for="Form.Email" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Form.ContactNumber" class="form-label">Contact Number</label>
                                    <input asp-for="Form.ContactNumber" class="form-control" placeholder="09XX-XXX-XXXX" />
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Form.Barangay" class="form-label">Barangay *</label>
                                    <select asp-for="Form.Barangay" class="form-control" required>
                                        <option value="">Select Barangay</option>
                                        <option value="Barangay 158">Barangay 158</option>
                                        <option value="Barangay 159">Barangay 159</option>
                                        <option value="Barangay 160">Barangay 160</option>
                                        <option value="Barangay 161">Barangay 161</option>
                                    </select>
                                    <span asp-validation-for="Form.Barangay" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Form.Address" class="form-label">Complete Address *</label>
                            <textarea asp-for="Form.Address" class="form-control" rows="2" required placeholder="House No., Street, Barangay, City"></textarea>
                            <span asp-validation-for="Form.Address" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Form.PreferredDate" class="form-label">Preferred Date *</label>
                                    <input asp-for="Form.PreferredDate" type="date" class="form-control" required />
                                    <small class="form-text text-muted">Immunization is available every Wednesday</small>
                                    <span asp-validation-for="Form.PreferredDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Form.PreferredTime" class="form-label">Preferred Time</label>
                                    <select asp-for="Form.PreferredTime" class="form-control">
                                        <option value="">Select Time</option>
                                        <option value="8:00 AM">8:00 AM</option>
                                        <option value="9:00 AM">9:00 AM</option>
                                        <option value="10:00 AM">10:00 AM</option>
                                        <option value="11:00 AM">11:00 AM</option>
                                        <option value="12:00 PM">12:00 PM</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Form.Notes" class="form-label">Additional Notes</label>
                            <textarea asp-for="Form.Notes" class="form-control" rows="3" placeholder="Any special requirements or notes..."></textarea>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Note:</strong> After submitting this form, you will receive an email confirmation with your immunization schedule. 
                            You can then complete the full immunization record during your visit.
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg me-3">
                                <i class="fas fa-paper-plane me-2"></i>
                                Send Schedule Request
                            </button>
                            <a href="/Nurse/Immunization" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times me-2"></i>
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Schedule Information -->
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-calendar-alt me-2"></i>
                        Immunization Schedule
                    </h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <i class="fas fa-clock text-success me-2"></i>
                            <strong>Every Wednesday</strong>
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-clock text-success me-2"></i>
                            <strong>Time:</strong> 8:00 AM - 12:00 PM
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-map-marker-alt text-success me-2"></i>
                            <strong>Location:</strong> Baesa Health Center
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-syringe text-success me-2"></i>
                            <strong>Services:</strong> All vaccines available
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-bolt me-2"></i>
                        Quick Actions
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="/Nurse/CreateImmunizationRecord" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-plus me-1"></i>
                            Create Full Record
                        </a>
                        <a href="/Nurse/ImmunizationRecords" class="btn btn-outline-success btn-sm">
                            <i class="fas fa-list me-1"></i>
                            View All Records
                        </a>
                        <button class="btn btn-outline-warning btn-sm" onclick="sendReminder()">
                            <i class="fas fa-envelope me-1"></i>
                            Send Reminder
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function sendReminder() {
            if (confirm('Send immunization reminder to all patients?')) {
                window.location.href = '/Nurse/Immunization';
            }
        }

        // Set default date to next Wednesday
        document.addEventListener('DOMContentLoaded', function() {
            const dateInput = document.querySelector('input[name="Form.PreferredDate"]');
            if (dateInput && !dateInput.value) {
                const today = new Date();
                const daysUntilWednesday = (3 - today.getDay() + 7) % 7;
                const nextWednesday = new Date(today);
                nextWednesday.setDate(today.getDate() + (daysUntilWednesday === 0 ? 7 : daysUntilWednesday));
                dateInput.value = nextWednesday.toISOString().split('T')[0];
            }
        });
    </script>
}
