@page
@model Barangay.Pages.Doctor.MedicalRecordsModel
@{
    ViewData["Title"] = "Medical Records";
    Layout = "~/Pages/Doctor/_DoctorLayout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Medical Records</h1>
    <p class="mb-4">Review patient medical records</p>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Patient Medical Records
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="medicalRecordsTable">
                    <thead>
                        <tr>
                            <th>Patient Name</th>
                            <th>Record Date</th>
                            <th>Record Type</th>
                            <th>Diagnosis</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.MedicalRecords != null && Model.MedicalRecords.Any())
                        {
                            foreach (var record in Model.MedicalRecords)
                            {
                                <tr>
                                    <td>@record.PatientName</td>
                                    <td>@record.RecordDate.ToString("MMM dd, yyyy")</td>
                                    <td>@record.RecordType</td>
                                    <td>@record.Diagnosis</td>
                                    <td>
                                        <a href="/Doctor/MedicalRecords/Details?id=@record.Id" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center">No medical records found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#medicalRecordsTable').DataTable({
                responsive: true
            });
        });
    </script>
} 