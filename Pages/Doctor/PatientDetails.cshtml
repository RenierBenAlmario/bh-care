@page "{id?}"
@model Barangay.Pages.Doctor.PatientDetailsModel
@{
    ViewData["Title"] = "Patient Details";
    Layout = "_DoctorLayout";
}

@section Styles {
    <style>
        .avatar-circle {
            width: 80px;
            height: 80px;
            background-color: #fd7e14;
            text-align: center;
            border-radius: 50%;
            -webkit-border-radius: 50%;
            -moz-border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .avatar-initials {
            color: white;
            font-size: 2rem;
            line-height: 1;
            font-weight: bold;
        }
        .tab-content {
            padding-top: 1rem;
        }
        .card-header-tabs {
            margin-right: 0;
            margin-bottom: -1px;
            margin-left: 0;
        }
        .detail-label {
            font-weight: 600;
            color: #495057;
        }

        /* Improve contrast of tabs */
        .patient-tabs .nav-link {
            color: #000000;
            font-weight: 600;
            background-color: #f8f9fa;
            margin-right: 2px;
            border: 1px solid #dee2e6;
        }
        .patient-tabs .nav-link.active {
            color: #ffffff;
            background-color: #fd7e14;
            border-color: #fd7e14 #fd7e14 transparent;
        }
        /* Ensure tabs are visible on smaller widths */
        .patient-tabs { display:flex; flex-wrap: wrap; overflow-x: auto; gap: 2px; }
        .patient-tabs::-webkit-scrollbar { height: 6px; }
        .patient-tabs::-webkit-scrollbar-thumb { background: #e0e0e0; border-radius: 3px; }
        .card-header.bg-warning {
            border-bottom: 0;
        }
        .tab-content {
            background-color: #ffffff;
            border: 1px solid #dee2e6;
            border-top: none;
            padding: 15px;
        }
        
        /* Medical Certificate Styles */
        .certificate-container {
            background: white;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
        }
        .certificate-header {
            border-bottom: 2px solid #fd7e14;
            padding-bottom: 15px;
            margin-bottom: 20px;
        }
        .certificate-header h4 {
            color: #fd7e14;
            font-weight: bold;
        }
        .certificate-header h3 {
            color: #333;
            font-weight: bold;
        }
        .certificate-body {
            line-height: 1.8;
        }
        .certificate-body .form-label {
            font-weight: 600;
            color: #495057;
        }
        .certificate-body .form-control {
            border: 1px solid #ced4da;
            border-radius: 4px;
        }
        .certificate-body .form-control:focus {
            border-color: #fd7e14;
            box-shadow: 0 0 0 0.2rem rgba(253, 126, 20, 0.25);
        }
    </style>
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Patient Details</h2>
        <a asp-page="/Doctor/PatientRecords" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Patient Records
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Patient == null)
    {
        <div class="alert alert-warning">
            <p>Patient not found or you don't have permission to view this patient's information.</p>
            <a asp-page="/Doctor/PatientRecords" class="btn btn-primary">Return to Patient Records</a>
        </div>
    }
    else
    {
        <div class="row">
            <!-- Patient Information Card -->
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header bg-warning text-white">
                        <h5 class="mb-0">Patient Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3 text-center">
                            <div class="avatar-circle mx-auto mb-3">
                                <span class="avatar-initials">@(string.IsNullOrEmpty(Model.Patient.FullName) ? "?" : Model.Patient.FullName.Substring(0, 1).ToUpper())</span>
                            </div>
                            <h4>@Model.Patient.FullName</h4>
                            <p class="text-muted">
                                @Model.Patient.Gender, @Model.Patient.Age years old
                            </p>
                            <span class="badge bg-@(Model.Patient.Status == "Active" ? "success" : "secondary")">@Model.Patient.Status</span>
                        </div>
                        
                        <hr />
                        
                        <dl class="row">
                            <dt class="col-sm-5">Contact Number:</dt>
                            <dd class="col-sm-7">@Model.Patient.ContactNumber</dd>
                            
                            <dt class="col-sm-5">Email:</dt>
                            <dd class="col-sm-7">@Model.Patient.Email</dd>
                            
                            <dt class="col-sm-5">Barangay:</dt>
                            <dd class="col-sm-7">@(string.IsNullOrEmpty(Model.Patient.User?.Barangay) ? "Not specified" : Model.Patient.User.Barangay)</dd>
                            
                            <dt class="col-sm-5">Address:</dt>
                            <dd class="col-sm-7">@Model.Patient.Address</dd>
                            
                            <dt class="col-sm-5">Blood Type:</dt>
                            <dd class="col-sm-7">@(string.IsNullOrEmpty(Model.Patient.BloodType) ? "Not specified" : Model.Patient.BloodType)</dd>
                            
                            <dt class="col-sm-5">Emergency Contact:</dt>
                            <dd class="col-sm-7">@Model.Patient.EmergencyContact (@Model.Patient.EmergencyContactNumber)</dd>
                        </dl>
                    </div>
                </div>
                
                <!-- Guardian Information Card -->
                @if (Model.Guardian != null)
                {
                    <div class="card mb-4">
                    <div class="card-header bg-warning text-white">
                        <h5 class="mb-0">Guardian Information</h5>
                    </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-5">Guardian Name:</dt>
                                <dd class="col-sm-7">@Model.Guardian.GuardianFirstName @Model.Guardian.GuardianLastName</dd>
                                
                                <dt class="col-sm-5">Consent Status:</dt>
                                <dd class="col-sm-7">
                                    <span class="badge bg-@(Model.Guardian.ConsentStatus == "Approved" ? "success" : Model.Guardian.ConsentStatus == "Denied" ? "danger" : "warning")">
                                        @Model.Guardian.ConsentStatus
                                    </span>
                                </dd>
                                
                                @if (!string.IsNullOrEmpty(Model.Guardian.ResidencyProofPath))
                                {
                                    <dt class="col-sm-5">Residency Proof:</dt>
                                    <dd class="col-sm-7">
                                        <a href="/api/Document/ViewDocument?path=@Model.Guardian.ResidencyProofPath" target="_blank" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-file-earmark-text"></i> View Document
                                        </a>
                                    </dd>
                                }
                            </dl>
                        </div>
                    </div>
                }
                
                <!-- Allergies & Medical History Card -->
                <div class="card mb-4">
                    <div class="card-header bg-warning text-white">
                        <h5 class="mb-0">Medical Information</h5>
                    </div>
                    <div class="card-body">
                        <h6>Allergies</h6>
                        <p>@(string.IsNullOrEmpty(Model.Patient.Allergies) ? "No known allergies" : Model.Patient.Allergies)</p>
                        
                        <hr />
                        
                        <h6>Medical History</h6>
                        <p>@(string.IsNullOrEmpty(Model.Patient.MedicalHistory) ? "No medical history recorded" : Model.Patient.MedicalHistory)</p>
                        
                        <hr />
                        
                        <h6>Current Medications</h6>
                        <p>@(string.IsNullOrEmpty(Model.Patient.CurrentMedications) ? "No current medications" : Model.Patient.CurrentMedications)</p>
                    </div>
                </div>
            </div>
            
            <!-- Tabs for Medical Records, Appointments, etc. -->
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header bg-warning text-white">
                        <ul class="nav nav-tabs card-header-tabs patient-tabs">
                            <li class="nav-item">
                                <a class="nav-link active" data-bs-toggle="tab" href="#medical-records">Medical Records</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="tab" href="#appointments">Appointments</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="tab" href="#prescriptions">Prescriptions</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="tab" href="#vital-signs">Vital Signs</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="tab" href="#medical-certificate">Medical Certificate</a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-body">
                        <div class="tab-content">
                            <!-- Medical Records Tab -->
                            <div class="tab-pane fade show active" id="medical-records">
                                <h5 class="mb-3">Medical Records</h5>
                                @if (Model.MedicalRecords?.Any() == true)
                                {
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Date</th>
                                                    <th>Type</th>
                                                    <th>Diagnosis</th>
                                                    <th>Doctor</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var record in Model.MedicalRecords.OrderByDescending(r => r.Date))
                                                {
                                                    <tr>
                                                        <td>@record.Date.ToString("MMM dd, yyyy")</td>
                                                        <td>@record.Type</td>
                                                        <td>@record.Diagnosis</td>
                                                        <td>Dr. @record.DoctorName</td>
                                                        <td>
                                                            <button type="button" class="btn btn-sm btn-info view-record" 
                                                                    data-id="@record.Id"
                                                                    data-date="@record.Date.ToString("MMM dd, yyyy")"
                                                                    data-type="@record.Type"
                                                                    data-complaint="@record.ChiefComplaint"
                                                                    data-diagnosis="@record.Diagnosis"
                                                                    data-treatment="@record.Treatment"
                                                                    data-notes="@record.Notes"
                                                                    data-status="@record.Status"
                                                                    data-doctor="Dr. @record.DoctorName">
                                                                <i class="bi bi-eye"></i> View
                                                            </button>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-info">
                                        No medical records available for this patient.
                                    </div>
                                }
                            </div>
                            
                            <!-- Appointments Tab -->
                            <div class="tab-pane fade" id="appointments">
                                <h5 class="mb-3">Appointment History</h5>
                                @if (Model.Patient.Appointments?.Any() == true)
                                {
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Date</th>
                                                    <th>Time</th>
                                                    <th>Description</th>
                                                    <th>Status</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var appointment in Model.Patient.Appointments.OrderByDescending(a => a.AppointmentDate))
                                                {
                                                    <tr>
                                                        <td>@appointment.AppointmentDate.ToString("MMM dd, yyyy")</td>
                                                        <td>@appointment.AppointmentTime.ToString(@"hh\:mm")</td>
                                                        <td>@appointment.Description</td>
                                                        <td>
                                                            <span class="badge bg-@(appointment.Status.ToString() == "Completed" ? "success" : appointment.Status.ToString() == "Cancelled" ? "danger" : "primary")">
                                                                @appointment.Status
                                                            </span>
                                                        </td>
                                                        <td>
                                                            <a href="/Doctor/Consultation?id=@appointment.Id" class="btn btn-sm btn-info">
                                                                <i class="bi bi-eye"></i> View
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-info">
                                        No appointment history available for this patient.
                                    </div>
                                }
                            </div>
                            
                            <!-- Prescriptions Tab -->
                            <div class="tab-pane fade" id="prescriptions">
                                <h5 class="mb-3">Prescriptions</h5>
                                @if (Model.Medications?.Any() == true)
                                {
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Date</th>
                                                    <th>Medication</th>
                                                    <th>Dosage</th>
                                                    <th>Instructions</th>
                                                    <th>Prescribed By</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var med in Model.Medications.OrderByDescending(m => m.CreatedAt))
                                                {
                                                    <tr>
                                                        <td>@med.CreatedAt?.ToString("MMM dd, yyyy")</td>
                                                        <td>@med.MedicationName</td>
                                                        <td>@med.Dosage</td>
                                                        <td>@med.Instructions</td>
                                                        <td>Dr. @med.DoctorName</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-info">
                                        No prescriptions available for this patient.
                                    </div>
                                }
                            </div>
                            
                            <!-- Vital Signs Tab -->
                            <div class="tab-pane fade" id="vital-signs">
                                <h5 class="mb-3">Vital Signs</h5>
                                @if (Model.Patient.VitalSigns?.Any() == true)
                                {
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Date</th>
                                                    <th>BP</th>
                                                    <th>HR</th>
                                                    <th>Temp</th>
                                                    <th>Weight</th>
                                                    <th>Height</th>
                                                    <th>BMI</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var vs in Model.Patient.VitalSigns.OrderByDescending(v => v.RecordedAt))
                                                {
                                                    <tr>
                                                        <td>@vs.RecordedAt.ToString("MMM dd, yyyy")</td>
                                                        <td>@vs.BloodPressure</td>
                                                        <td>@(string.IsNullOrEmpty(vs.HeartRate) ? "N/A" : $"{vs.HeartRate} bpm")</td>
                                                        <td>@(string.IsNullOrEmpty(vs.Temperature) ? "N/A" : $"{vs.Temperature} °C")</td>
                                                        <td>@(string.IsNullOrEmpty(vs.Weight) ? "N/A" : $"{vs.Weight} kg")</td>
                                                        <td>@(string.IsNullOrEmpty(vs.Height) ? "N/A" : $"{vs.Height} cm")</td>
                                                        <td>@(Model.Patient.BMI.HasValue ? $"{Model.Patient.BMI:F1}" : "N/A")</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-info">
                                        No vital signs recorded for this patient.
                                    </div>
                                }
                            </div>
                            
                            <!-- Medical Certificate Tab -->
                            <div class="tab-pane fade" id="medical-certificate">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h5 class="mb-0">Medical Certificate</h5>
                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#medicalCertificateModal">
                                        <i class="bi bi-file-earmark-medical"></i> Generate Certificate
                                    </button>
                                </div>
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle"></i>
                                    Click "Generate Certificate" to create a medical certificate for this patient. The certificate will be auto-filled with patient information but can be edited before printing.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Medical Record Details Modal -->
<div class="modal fade" id="medicalRecordModal" tabindex="-1" aria-labelledby="medicalRecordModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="medicalRecordModalLabel">Medical Record Details</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card mb-3">
                    <div class="card-header bg-light">
                        <div class="row">
                            <div class="col-md-6">
                                <p class="mb-0"><span class="detail-label"><i class="bi bi-calendar-event"></i> Date:</span> <span id="record-date" class="fw-bold"></span></p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-0"><span class="detail-label"><i class="bi bi-tag"></i> Type:</span> <span id="record-type" class="fw-bold"></span></p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <p class="mb-0"><span class="detail-label"><i class="bi bi-person-badge"></i> Doctor:</span> <span id="record-doctor" class="fw-bold"></span></p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-0"><span class="detail-label"><i class="bi bi-activity"></i> Status:</span> <span class="badge" id="record-status-badge">Unknown</span></p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="card mb-3">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="bi bi-chat-right-text"></i> Chief Complaint</h6>
                    </div>
                    <div class="card-body">
                        <div class="p-3 bg-light rounded border-start border-primary border-3" id="record-complaint">No chief complaint recorded</div>
                    </div>
                </div>
                
                <div class="card mb-3">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="bi bi-clipboard-pulse"></i> Diagnosis</h6>
                    </div>
                    <div class="card-body">
                        <div class="p-3 bg-light rounded border-start border-primary border-3" id="record-diagnosis">No diagnosis recorded</div>
                    </div>
                </div>
                
                <div class="card mb-3">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="bi bi-capsule"></i> Treatment Plan</h6>
                    </div>
                    <div class="card-body">
                        <div class="p-3 bg-light rounded border-start border-primary border-3" id="record-treatment">No treatment recorded</div>
                    </div>
                </div>
                
                <div class="card">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="bi bi-journal-text"></i> Notes</h6>
                    </div>
                    <div class="card-body">
                        <div class="p-3 bg-light rounded border-start border-primary border-3" id="record-notes">No notes recorded</div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i> Close
                </button>
                <a href="#" class="btn btn-primary" id="print-record-link" target="_blank">
                    <i class="bi bi-printer"></i> Print Record
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Medical Certificate Modal -->
<div class="modal fade" id="medicalCertificateModal" tabindex="-1" aria-labelledby="medicalCertificateModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="medicalCertificateModalLabel">Medical Certificate</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="certificate-container" id="certificateContent">
                    <div class="certificate-header text-center mb-4">
                        <h4 class="mb-1">BRGY. 161 BAESA HEALTH CENTER</h4>
                        <p class="mb-1">356, ROSE CALOOCAN CITY</p>
                        <p class="mb-3">baesahealthcenter2021@gmail.com</p>
                        <h3 class="mb-4"><strong>MEDICAL CERTIFICATE</strong></h3>
                        <div class="text-end mb-3">
                            <strong>DATE: <span id="certificateDate">@DateTime.Now.ToString("MMMM dd, yyyy")</span></strong>
                        </div>
                    </div>
                    
                    <div class="certificate-body">
                        <p class="mb-3">To whom it may concern:</p>
                        <p class="mb-3">This is to certify that I have seen and examined</p>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="patientName" class="form-label">Patient Name:</label>
                                <input type="text" class="form-control" id="patientName" value="@Model.Patient.FullName">
                            </div>
                            <div class="col-md-6">
                                <label for="patientAge" class="form-label">Age:</label>
                                <input type="text" class="form-control" id="patientAge" value="@Model.Patient.Age">
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="reason" class="form-label">Reason for Certificate:</label>
                            <input type="text" class="form-control" id="reason" placeholder="Enter reason for medical certificate">
                        </div>
                        
                        <div class="mb-3">
                            <label for="impression" class="form-label">Impression:</label>
                            <textarea class="form-control" id="impression" rows="3" placeholder="Enter medical impression"></textarea>
                        </div>
                        
                        <div class="mb-3">
                            <label for="remarks" class="form-label">Remarks:</label>
                            <textarea class="form-control" id="remarks" rows="3" placeholder="Enter additional remarks"></textarea>
                        </div>
                        
                        <div class="mb-4">
                            <p class="mb-2">This certification is being issued upon the request of the patient for whatever purpose it may serve except for medico-legal purposes.</p>
                        </div>
                        
                        <div class="text-end">
                            <p class="mb-1">Respectfully yours,</p>
                            <div class="mb-3">
                                <label for="doctorName" class="form-label">Doctor Name:</label>
                                <input type="text" class="form-control" id="doctorName" value="@Model.CurrentUser?.FullName">
                            </div>
                            <div class="mb-3">
                                <label for="doctorTitle" class="form-label">Title/Position:</label>
                                <input type="text" class="form-control" id="doctorTitle" value="Medical Officer III">
                            </div>
                        </div>
                        
                        <div class="text-start mt-4">
                            <p class="text-muted"><strong>NOT VALID WITHOUT ORIGINAL STAMP</strong></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i> Cancel
                </button>
                <button type="button" class="btn btn-success" id="printCertificate">
                    <i class="bi bi-printer"></i> Print Certificate
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Handle tab activation
            $('a[data-bs-toggle="tab"]').on('shown.bs.tab', function (e) {
                localStorage.setItem('activePatientTab', $(e.target).attr('href'));
            });
            
            // Restore active tab
            var activeTab = localStorage.getItem('activePatientTab');
            if (activeTab) {
                $('a[href="' + activeTab + '"]').tab('show');
            }
            
            // Initialize the medical record modal
            const medicalRecordModal = new bootstrap.Modal(document.getElementById('medicalRecordModal'));
            
            // Handle view record button clicks
