@page
@model Barangay.Pages.Doctor.AppointmentTestModel
@{
    ViewData["Title"] = "Test Appointment Creation";
}

<div class="container mt-4">
    <h2>Create Test Appointment</h2>
    
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert @(Model.IsError ? "alert-danger" : "alert-success")">
            @Model.Message
        </div>
    }
    
    <form method="post">
        <button type="submit" class="btn btn-primary">Create Test Appointment</button>
    </form>
    
    <hr />
    
    @if (Model.CreatedAppointment != null)
    {
        <h4>Created Appointment Details:</h4>
        <table class="table">
            <tr>
                <th>ID</th>
                <td>@Model.CreatedAppointment.Id</td>
            </tr>
            <tr>
                <th>Patient Name</th>
                <td>@Model.CreatedAppointment.PatientName</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>@Model.CreatedAppointment.AppointmentDate.ToString("yyyy-MM-dd")</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>@Model.CreatedAppointment.GetFormattedTime()</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>@Model.CreatedAppointment.Status</td>
            </tr>
        </table>
    }
</div> 