@page
@model Barangay.Pages.Doctor.PatientHistoryModel
@{
    ViewData["Title"] = "Patient History";
    Layout = "~/Pages/Doctor/_DoctorLayout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Patient History</h1>
    <p class="mb-4">View patient medical history and previous consultations</p>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-search me-1"></i>
                    Search Patient
                </div>
                <div class="card-body">
                    <form method="get">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" placeholder="Search by patient name" name="searchTerm" value="@Model.SearchTerm">
                            <button class="btn btn-primary" type="submit">Search</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-history me-1"></i>
            Patient History Records
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="patientHistoryTable">
                    <thead>
                        <tr>
                            <th>Patient Name</th>
                            <th>Visit Date</th>
                            <th>Consultation Type</th>
                            <th>Diagnosis</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.PatientHistory != null && Model.PatientHistory.Any())
                        {
                            foreach (var record in Model.PatientHistory)
                            {
                                <tr>
                                    <td>@record.PatientName</td>
                                    <td>@record.VisitDate.ToString("MMM dd, yyyy")</td>
                                    <td>@record.ConsultationType</td>
                                    <td>@record.Diagnosis</td>
                                    <td>
                                        <a href="/Doctor/PatientHistory/Details?id=@record.Id" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center">No patient history records found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#patientHistoryTable').DataTable({
                responsive: true
            });
        });
    </script>
} 