@page
@using Barangay.Models
@model Barangay.Pages.Doctor.DoctorDashboardModel
@{
    ViewData["Title"] = "Doctor Dashboard";
    Layout = "_DoctorLayout";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Doctor Dashboard</h1>
    <p class="mb-4">@DateTime.Now.ToString("dddd, MMMM dd, yyyy")</p>

    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <h5 class="card-title">Total Patients</h5>
                    <h2 class="display-4">@Model.TotalPatients</h2>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <h5 class="card-title">Consulted</h5>
                    <h2 class="display-4">@Model.Consulted</h2>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <h5 class="card-title">Pending</h5>
                    <h2 class="display-4">@Model.Pending</h2>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <h5 class="card-title">Urgent Cases</h5>
                    <h2 class="display-4">@Model.UrgentCases</h2>
                </div>
            </div>
        </div>
    </div>



    <div class="row">
        <!-- Today's Appointments Section -->
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-calendar-check me-1"></i>
                    Today's Appointments
                </div>
                <div class="card-body">
                    @if (Model.TodaysAppointments != null && Model.TodaysAppointments.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Time</th>
                                        <th>Patient</th>
                                        <th>Type</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                                                <tbody>
                                    @foreach (var appointment in Model.TodaysAppointments)
                                    {
                                        <tr>
                                                                                                                                    <td>@appointment.AppointmentTime.ToString(@"hh\:mm")</td>
                                            <td>@(appointment.Patient?.FullName ?? appointment.PatientName)</td>
                                            <td>@appointment.Type</td>
                                            <td>
                                                <span class="badge @(appointment.Status == AppointmentStatus.Completed ? "bg-success" : appointment.Status == AppointmentStatus.Cancelled ? "bg-danger" : appointment.Status == AppointmentStatus.Confirmed ? "bg-warning" : "bg-primary")">
                                                    @appointment.Status
                                                </span>
                                            </td>
                                            <td>
                                                @if (appointment.Status == AppointmentStatus.Confirmed || appointment.Status == AppointmentStatus.InProgress)
                                                {
                                                    <a href="@Url.Page("/Doctor/Consultation", new { appointmentId = appointment.Id, patientId = appointment.PatientId })" class="btn btn-sm btn-outline-primary">Start Consultation</a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-center mb-0">No appointments scheduled for today.</p>
                    }
                </div>
                <div class="card-footer">
                    <a href="/Doctor/Appointments" class="btn btn-outline-primary btn-sm">View All Appointments</a>
                    <a href="/Doctor/PatientResults" class="btn btn-outline-info btn-sm">View Patient Results</a>
                </div>
            </div>
        </div>

        <!-- Recent Notifications Section -->
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-bell me-1"></i>
                    Recent Notifications
                </div>
                <div class="card-body">
                    @if (Model.RecentNotifications != null && Model.RecentNotifications.Any())
                    {
                        <div class="list-group">
                            @foreach (var notification in Model.RecentNotifications)
                            {
                                <div class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@notification.Title</h6>
                                        <small>@notification.CreatedAt.ToLocalTime().ToString("MMM dd, hh:mm tt")</small>
                                    </div>
                                    <p class="mb-1">@notification.Message</p>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-center mb-0">No recent notifications</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto refresh every 5 minutes
            setInterval(function() {
                location.reload();
            }, 300000);
        });
    </script>
}