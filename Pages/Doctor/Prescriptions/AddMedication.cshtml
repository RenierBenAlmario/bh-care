@page "{id:int}"
@model Barangay.Pages.Doctor.Prescriptions.AddMedicationModel
@{
    ViewData["Title"] = "Add Medication to Prescription";
    Layout = "_DoctorLayout";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Add Medication to Prescription</h2>
        <div>
            <a href="/Doctor/Prescriptions/Details/@Model.PrescriptionId" class="btn btn-outline-secondary me-2">
                <i class="fas fa-arrow-left me-1"></i> Back to Prescription
            </a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(TempData["SuccessMessage"]?.ToString()))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(TempData["ErrorMessage"]?.ToString()))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Add New Medication</h5>
        </div>
        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="PrescriptionId" />
                
                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Medication.MedicationName" class="form-label">Medication Name <span class="text-danger">*</span></label>
                            <input asp-for="Medication.MedicationName" class="form-control" required />
                            <span asp-validation-for="Medication.MedicationName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Medication.Dosage" class="form-label">Dosage <span class="text-danger">*</span></label>
                            <input asp-for="Medication.Dosage" class="form-control" required />
                            <span asp-validation-for="Medication.Dosage" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Medication.Unit" class="form-label">Unit <span class="text-danger">*</span></label>
                            <select asp-for="Medication.Unit" class="form-select" required>
                                <option value="">Select Unit</option>
                                <option value="mg">mg - Milligrams</option>
                                <option value="g">g - Grams</option>
                                <option value="ml">ml - Milliliters</option>
                                <option value="mcg">mcg - Micrograms</option>
                                <option value="IU">IU - International Units</option>
                                <option value="tablet">tablet - Tablet</option>
                                <option value="capsule">capsule - Capsule</option>
                                <option value="drop">drop - Drop</option>
                                <option value="patch">patch - Patch</option>
                                <option value="application">application - Application</option>
                            </select>
                            <span asp-validation-for="Medication.Unit" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Medication.Frequency" class="form-label">Frequency <span class="text-danger">*</span></label>
                            <select asp-for="Medication.Frequency" class="form-select" required>
                                <option value="">Select Frequency</option>
                                <option value="once daily">Once Daily</option>
                                <option value="twice daily">Twice Daily</option>
                                <option value="three times daily">Three Times Daily</option>
                                <option value="four times daily">Four Times Daily</option>
                                <option value="every 4 hours">Every 4 Hours</option>
                                <option value="every 6 hours">Every 6 Hours</option>
                                <option value="every 8 hours">Every 8 Hours</option>
                                <option value="every 12 hours">Every 12 Hours</option>
                                <option value="before meals">Before Meals</option>
                                <option value="after meals">After Meals</option>
                                <option value="as needed">As Needed</option>
                            </select>
                            <span asp-validation-for="Medication.Frequency" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Medication.Duration" class="form-label">Duration</label>
                            <input asp-for="Medication.Duration" class="form-control" placeholder="e.g., 7 days, 2 weeks" />
                            <span asp-validation-for="Medication.Duration" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Medication.Instructions" class="form-label">Instructions</label>
                    <textarea asp-for="Medication.Instructions" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Medication.Instructions" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a href="/Doctor/Prescriptions/Details/@Model.PrescriptionId" class="btn btn-outline-secondary me-md-2">Cancel</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-plus-circle me-1"></i> Add Medication
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 